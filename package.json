{
  "name": "remix-template-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "start": "remix-serve build",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i app/styles/directives.css -o app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i app/styles/directives.css -o app/styles/tailwind.css",
    "lint": "eslint app/**/*.ts app/**/*.tsx"
  },
  "dependencies": {
    "@code-hike/mdx": "^0.7.4",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "date-fns": "^2.28.0",
    "marked": "^4.1.0",
    "react": "^17.0.2",
    "react-detect-click-outside": "^1.1.2",
    "react-dom": "^17.0.2",
    "rehype-pretty-code": "^0.3.2",
    "shiki": "^0.11.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "concurrently": "^7.2.1",
    "eslint": "^8.24.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm eslint",
      "pnpm prettier --write"
    ]
  },
  "husky": {
    "pre-commit": "lint-staged"
  }
}
